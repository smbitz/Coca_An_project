<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#7F000000">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/supplyDialogAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_status_animal"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supplyDialogPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_status_plant"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supplyDialogSeaAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_status_seaanimal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/supplyCloseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_close"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>